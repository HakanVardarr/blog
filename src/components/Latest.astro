---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<section class="bg-[#f7f4f2]">
  <div class="max-w-6xl mx-auto relative px-8 py-10">
    <div class="absolute left-0 top-0 bottom-0 w-1 bg-purple-700"></div>
    <div class="pl-12">
      <div class="flex items-center gap-6 mb-8">
        <span
          class="bg-purple-700 text-white text-xs font-semibold px-4 py-2 tracking-widest"
        >
          LATEST POST
        </span>
        <span class="text-purple-800 text-xs tracking-widest">
          {post.data.date.getFullYear()}
        </span>
      </div>
      <h1 class="font-serif text-4xl sm:text-6xl leading-tight mb-6">
        {post.data.title}
      </h1>
      <p class="text-gray-600 text-base sm:text-lg max-w-xl mb-10">
        {post.data.description}
      </p>
      <div class="flex items-center gap-8">
        <a
          href={`blog/${post.slug}`}
          class="group text-sm font-semibold tracking-widest border-b-2 border-purple-800 pb-2 inline-flex items-center gap-2 transition-colors duration-200 hover:text-purple-800"
        >
          FULL ARTICLE
          <span
            class="transition-transform duration-200 group-hover:translate-x-1"
          >
            <!-- TODO: Use a good icon -->
            â†’
          </span>
        </a>
      </div>
    </div>
  </div>
</section>
